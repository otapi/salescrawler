<Window x:Class="SalesCrawler.Views.CrawlerMonitorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SalesCrawler.Views"
        mc:Ignorable="d"
        xmlns:ViewModels="clr-namespace:SalesCrawler.ViewModels"
        
        Title="CrawlerMonitorWindow" Height="450" Width="800">
    <Window.DataContext>
        <ViewModels:CrawlerVM/>
    </Window.DataContext>
    <Grid>
        <DataGrid Height="366" Margin="10,10,0,0" Width="773" ItemsSource="{Binding Bots}" />

    </Grid>
</Window>
