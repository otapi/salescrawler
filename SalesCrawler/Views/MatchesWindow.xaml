<Window x:Class="SalesCrawler.Views.MatchesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SalesCrawler.Views"
        mc:Ignorable="d"
        Title="MatchesWindow" Height="450" Width="800">
    <Grid>
        <DataGrid ItemsSource="{Binding Matches}" Margin="0,39,0.333,-0.333" >
        </DataGrid>
        <Button Content="Refresh" Command="{Binding LoadItemsCommand}" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="84" Height="24"/>
    </Grid>
</Window>
